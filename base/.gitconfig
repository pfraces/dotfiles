    email = pfraces@gmail.com
    name = Pau Frac√©s

[url "https://"]
    insteadOf = git://

[core]
    excludesfile = ~/.gitignore
    editor = vim
    pager = less -SFRX

[pager]
    status = true

[credential]
    helper = cache --timeout=3600

[diff]
    tool = meld

[merge]
    tool = meld

[mergetool "meld"]
    cmd = meld --diff $BASE $LOCAL --diff $BASE $REMOTE --auto-merge $LOCAL $BASE $REMOTE --output $MERGED
